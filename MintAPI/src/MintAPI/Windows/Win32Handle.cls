Public Sub Dispose()
    If p_Handle = vbNullPtr Then Exit Sub
    If p_UseCloseHandle Then
        If Not API_CloseHandle(p_Handle) Then _
            throw Exps.IfError
    Else
        Call p_AlternateCloser.Invoke(AL(p_Handle))
    End If
    p_Handle = 0
