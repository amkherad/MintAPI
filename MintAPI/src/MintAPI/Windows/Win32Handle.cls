        Signal.Emit Me, SIGNAL_TERMINATING
        Call myMetaObject.Dispose
        Set myMetaObject = Nothing
    End If

    Call Dispose
End Sub

Private Sub THROW_IfNull()
    If p_Handle = vbNullPtr Then throw Exps.ObjectDisposedException
