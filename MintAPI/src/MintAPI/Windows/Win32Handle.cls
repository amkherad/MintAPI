Friend Sub Constructor0(ByVal Handle As Long, Optional ByVal UseCloseHandle As Boolean, Optional ByVal AlternateCloser As Method = Nothing)
    If Handle = INVALID_HANDLE_VALUE Then throw Exps.InvalidOperationException("Invalid handle.")
    p_Handle = Handle
    p_UseCloseHandle = UseCloseHandle
    If Not UseCloseHandle Then
        If AlternateCloser Is Nothing Then throw Exps.ArgumentNullException("AlternateCloser")
        Set p_AlternateCloser = AlternateCloser
    End If
    
